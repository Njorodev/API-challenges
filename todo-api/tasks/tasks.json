import json
import os

TASKS_FILE = os.path.join('tasks', 'tasks.json')

def save_tasks(todos):
    with open(TASKS_FILE, 'w') as f:
        json.dump(todos, f, indent=4)

def load_tasks():
    try:
        with open(TASKS_FILE, 'r') as f:
            return json.load(f)
    except FileNotFoundError:
        return []

